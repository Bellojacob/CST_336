<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lab 6 - Famous Quotes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <style>
        img{
            width: 25%;

        }
    </style>
</head>
<body>
    <h1>Quotes</h1>
    <% for (let row of rows){ %>
        <%= row.quote %><br>
        <!-- -<a href="/author/<%= row.authorId %>"> <%= row.firstName %> <%= row.lastName %></a> -->
        -<a class="authorLink" href="#" authorId="<%= row.authorId %>"> <%= row.firstName %> <%= row.lastName %></a>

        <br>
        <hr>
    <% } %>



    <!-- Button trigger modal -->
<!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button> -->
  
  <!-- Modal -->
  <div class="modal fade" id="authorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            
            <div id="authorInfo">
                <h1 id="authorName"></h1>
                <img id="authorImage">
                Date of Birth: <span id="dob"></span>
            </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

    <script>
        let authorLinks = document.querySelectorAll(".authorLink");
        for(let i of authorLinks){
            i.addEventListener("click", displayAuthorInfo);
        }
        

        async function displayAuthorInfo(){
            // alert("Displaying author info");
            let authorId = this.getAttribute("authorId");
            let url = "/api/author/" + authorId;
            let response = await fetch(url);
            let data = await response.json();
            console.log(data);

            let dobForomatted = new Date(data[0].dob)
            document.querySelector("#authorName").innerText = data[0].firstName + " " + data[0].lastName;
            document.querySelector("#authorImage").src = data[0].portrait;
            document.querySelector("#dob").innerText = (dobForomatted.getMonth() + 1) + "/" + dobForomatted.getDate() + "/" + dobForomatted.getFullYear();


            const myModal = new bootstrap.Modal('#authorModal')
            myModal.show();
        }
    </script>

    
</body>
</html>